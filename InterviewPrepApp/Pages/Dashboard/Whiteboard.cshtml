@page
@model InterviewPrepApp.Pages.Dashboard.WhiteboardModel
@{
    ViewData["Title"] = "Whiteboard";
    Layout = "_Layout";
}

<h1>Whiteboard</h1>
<div class="card">
    <form method="post" class="add-form">
        <p>Create a new Whiteboard Question</p>
        <div class="form-group">
            <label asp-for="@Model.Question.Question">Question</label>
            <textarea class="form-control" rows="2" asp-for="@Model.Question.Question"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-dark">
        </div>
    </form>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Question
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllQs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Question)
                </td>
            </tr>
        }
    </tbody>
</table>